{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/sitemap.xml"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  
  "env": {
    "VITE_SITE_URL": "https://ytvanced.pro",
    "VITE_SITEMAP_DOMAIN": "https://ytvanced.pro",
    "VITE_SITEMAP_CHANGEFREQ": "daily",
    "VITE_SITEMAP_PRIORITY": "0.7"
  }
}